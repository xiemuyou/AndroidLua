<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="30dp"
            android:gravity="center"
            android:text="@string/sub_content_tips"/>

    <Button
            android:id="@+id/btn_open_no_float_win"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_open_wm"
            android:layout_margin="10dp"
            android:text="@string/btn_txt_open_no_fw"/>

    <Button
            android:id="@+id/btn_open_wm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="@string/btn_txt_open_sys_win"/>
</RelativeLayout>
